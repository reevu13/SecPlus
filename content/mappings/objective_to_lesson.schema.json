{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Objective To Lesson Mapping Schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "entries"
  ],
  "properties": {
    "version": {
      "type": "string",
      "minLength": 1
    },
    "entries": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "objectiveId",
          "chapterId",
          "moduleId",
          "pageId",
          "label"
        ],
        "properties": {
          "objectiveId": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+$"
          },
          "chapterId": {
            "type": "string",
            "minLength": 1
          },
          "moduleId": {
            "type": "string",
            "minLength": 1
          },
          "pageId": {
            "type": "string",
            "minLength": 1
          },
          "label": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    }
  }
}
