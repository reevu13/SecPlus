{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Chapter Lessons Schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "pack_id",
    "version",
    "modules"
  ],
  "properties": {
    "pack_id": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "modules": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/module"
      }
    },
    "objectiveIds": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^\\d+\\.\\d+$"
      },
      "minItems": 0,
      "default": []
    }
  },
  "$defs": {
    "module": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "title",
        "tag_ids",
        "pages"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "tag_ids": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "pages": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/page"
          }
        },
        "objectiveIds": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+$"
          },
          "minItems": 0,
          "default": []
        }
      }
    },
    "page": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "title",
        "content_blocks",
        "checks",
        "objectiveIds"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "content_blocks": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/content_block"
          }
        },
        "checks": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/check"
          }
        },
        "objectiveIds": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+$"
          },
          "minItems": 1,
          "default": []
        }
      }
    },
    "content_block": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "type",
        "text"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "explain",
            "diagram",
            "example",
            "trap"
          ]
        },
        "text": {
          "type": "string"
        }
      }
    },
    "check": {
      "oneOf": [
        {
          "$ref": "#/$defs/check_single_choice"
        },
        {
          "$ref": "#/$defs/check_multi_select"
        },
        {
          "$ref": "#/$defs/check_matching"
        },
        {
          "$ref": "#/$defs/check_cloze"
        }
      ]
    },
    "check_single_choice": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "type",
        "prompt",
        "options",
        "correct_index",
        "explanation",
        "objectiveIds"
      ],
      "properties": {
        "type": {
          "type": "string",
          "const": "single_choice"
        },
        "prompt": {
          "type": "string"
        },
        "options": {
          "type": "array",
          "minItems": 2,
          "items": {
            "type": "string"
          }
        },
        "correct_index": {
          "type": "integer",
          "minimum": 0
        },
        "explanation": {
          "type": "string"
        },
        "objectiveIds": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+$"
          },
          "minItems": 1
        }
      }
    },
    "check_multi_select": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "type",
        "prompt",
        "options",
        "correct_indices",
        "explanation",
        "objectiveIds"
      ],
      "properties": {
        "type": {
          "type": "string",
          "const": "multi_select"
        },
        "prompt": {
          "type": "string"
        },
        "options": {
          "type": "array",
          "minItems": 2,
          "items": {
            "type": "string"
          }
        },
        "correct_indices": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "integer",
            "minimum": 0
          }
        },
        "explanation": {
          "type": "string"
        },
        "objectiveIds": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+$"
          },
          "minItems": 1
        }
      }
    },
    "check_matching": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "type",
        "prompt",
        "left",
        "right",
        "correct_map",
        "explanation",
        "objectiveIds"
      ],
      "properties": {
        "type": {
          "type": "string",
          "const": "matching"
        },
        "prompt": {
          "type": "string"
        },
        "left": {
          "type": "array",
          "minItems": 2,
          "items": {
            "type": "string"
          }
        },
        "right": {
          "type": "array",
          "minItems": 2,
          "items": {
            "type": "string"
          }
        },
        "correct_map": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "explanation": {
          "type": "string"
        },
        "objectiveIds": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+$"
          },
          "minItems": 1
        }
      }
    },
    "check_cloze": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "type",
        "prompt",
        "answers",
        "explanation",
        "objectiveIds"
      ],
      "properties": {
        "type": {
          "type": "string",
          "const": "cloze"
        },
        "prompt": {
          "type": "string"
        },
        "answers": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          }
        },
        "explanation": {
          "type": "string"
        },
        "objectiveIds": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+$"
          },
          "minItems": 1
        }
      }
    }
  }
}
